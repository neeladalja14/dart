/* this is the first code in dart, basic code. */

void main(){
  int x = 23;
  bool student = true;
  var name = "Neel";
  double kick = 2.4;
  
  const name2 = "people";
  print(x);
  x=42;
  print(x);
  print(name);
  print(kick);
  print(student);
  print(name2);
  
}
